<div class="row">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title" style="text-align:center">使用者登入</h3>
      </div>
      <div class="panel-body" style="margin: 0px auto">
        <div>
          <%= link_to "使用Facebook登入", user_omniauth_authorize_path(:facebook), class: "btn btn-primary btn-block"%>
          <br>
          <%= link_to "使用Google登入", user_omniauth_authorize_path(:google_oauth2), class: "btn btn-danger btn-block"%>
          <br>
          <%= link_to "使用Github登入", user_omniauth_authorize_path(:github), class: "btn btn-default btn-block"%>
        </div>
        <hr>
        <div>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs">
              <%= f.input :email, required: false, autofocus: true %>
              <%= f.input :password, required: false %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
            <div class="form-actions">
              <%= f.submit '登入', class: "btn btn-default btn-block" %>
            </div>
          <% end %>
        </div>
        <hr>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
<br>
