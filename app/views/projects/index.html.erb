<div class="jumbotron" style="background-image: url(https://s3-ap-northeast-1.amazonaws.com/moonproject/img/more.jpg); background-size: cover; background-repeat: no-repeat; background-attachment:center; background-position: center">
  <div class="container">
    <h1 style="color: white">More Project</h1>
    <h1 style="color: white">登月計劃看板</h1>
    <h2 style="color: white">給夥伴們鼓勵</h2>
  </div>
</div>

<div class="row">
  <% @projects.each do |project| %>
    <div class="col-sm-6 col-md-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <% if project.showname? %>
            <h4 class="panel-title">發起人 : <%= project.author.name %></h4>
          <% else %>
            <h4 class="panel-title">發起人 : 匿名太空人</h4>
          <% end %>
        </div>
        <div class="panel-body">
          <h3><%= project.mastergoal %></h3>
          <h4>執行進度</h4>
          <div class="progress">
            <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
              0%
            </div>
          </div>
          <% if project.editable_by?(current_user) %>
            <div class="btn-group btn-group-justified" role="group" aria-label="...">
              <div class="btn-group" role="group">
                <%= link_to("看計畫", project_path(project), class: "btn btn-default", role: "button") %>
              </div>
                <div class="btn-group" role="group">
                  <%= link_to("修改", edit_project_path(project), class: "btn btn-primary", role: "button") %>
                </div>
                <div class="btn-group" role="group">
                  <%= link_to("刪除", project_path(project), data: { confirm: "你確定要刪除嗎?" }, method: :delete, class: "btn btn-danger", role: "button") %>
                </div>
            </div>
          <% else %>
            <%= link_to("看計畫", project_path(project), class: "btn btn-primary btn-block", role: "button") %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
