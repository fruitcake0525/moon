<div class="jumbotron" style="background-image: url(<%=  image_path("more.jpg") %>); background-size: cover; background-repeat: no-repeat; background-attachment:center; background-position: center">
  <div class="container">
    <h1 style="color: white">More Project</h1>
    <h1 style="color: white">登月計劃看板</h1>
    <h2 style="color: white">給夥伴們鼓勵</h2>
  </div>
</div>

<div class="row">
  <% @projects.each do |project| %>
    <% @progress1 = Date.today %>
    <% @progress2 = project.created_at.to_date %>
    <% @progress3 = project.finaldate %>
    <% @progress4 = (@progress1-@progress2).to_i %>
    <% @progress5 = (@progress3-@progress2).to_i %>
    <% @progress6 = @progress4*100/@progress5 %>
    <div class="col-sm-6 col-md-3">
      <div class="panel panel-default">
        <div class="panel-heading">
          <% if project.showname? %>
            <h4 class="panel-title">發起人 : <%= project.author.name %></h4>
          <% else %>
            <h4 class="panel-title">發起人 : 匿名太空人</h4>
          <% end %>
        </div>
        <div class="panel-body">
          <h3><%= project.mastergoal %></h3>
          <h4>執行進度</h4>
          <div class="progress">
            <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: <%= @progress6 %>%">
              <%= @progress6 %>%
            </div>
          </div>
          <div>
            <%= link_to("看計畫", project_path(project), class: "btn btn-primary btn-block", role: "button") %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= paginate @projects %>
