<div class="jumbotron" style="background-image: url(https://s3-ap-northeast-1.amazonaws.com/moonproject/img/new.jpg); background-size: cover; background-repeat: no-repeat; background-attachment:center; background-position: center">
  <div class="container">
    <h1 style="color: white">Moon Project</h1>
    <h1 style="color: white">每天累積</h1>
    <h2 style="color: white">一點點的進步</h2>
  </div>
</div>
<div>
  <%= simple_form_for @dream do |f| %>
    <%= f.input :mastergoal, required: true, label: '這次的登月目標是什麼？', input_html: {value: @dream.mastergoal} %>
    <%= f.input :secondgoal, required: true, label: '明確的子目標是什麼？', input_html: {value: @dream.secondgoal} %>
    <%= f.input :success, required: true, label: '怎樣才算是成功？', input_html: {value: @dream.success} %>
    <%= f.input :can, required: true, label: '這件事有可能辦到嗎？', input_html: {value: @dream.can} %>
    <%= f.input :how, required: true, label: '這件事能配合現實生活嗎？', input_html: {value: @dream.how} %>
    <%= f.input :when, required: true, label: '時間進度怎麼定？', input_html: {value: @dream.when} %>
    <p><%= f.collection_radio_buttons :owner_name, [[true, '署名發表'] ,[false, '匿名發表']], :first, :last %></p>
    <%= f.submit 'Save', class: "btn btn-primary" %>
  <% end %>
</div>
<br>
