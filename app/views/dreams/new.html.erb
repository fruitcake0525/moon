<div class="jumbotron" style="background-image: url(<%=  image_path("new.jpg") %>); background-size: cover; background-repeat: no-repeat; background-attachment:center; background-position: center">
  <div class="container">
    <h1 style="color: white">Moon Project</h1>
    <h1 style="color: white">每天累積</h1>
    <h2 style="color: white">一點點的進步</h2>
  </div>
</div>
<div>
  <%= simple_form_for @dream do |f| %>
    <%= f.input :mastergoal, required: true, label: '這次的登月目標是什麼？', placeholder: '跑馬拉松', input_html: {value: @dream.mastergoal} %>
    <%= f.input :secondgoal, required: true, label: '明確的子目標是什麼？', placeholder: '不間斷跑十一公里', input_html: {value: @dream.secondgoal} %>
    <%= f.input :success, required: true, label: '怎樣才算是成功？', placeholder: '每天跑兩圈公園，不能用走的', placeholder: '不間斷跑十一公里', input_html: {value: @dream.success} %>
    <%= f.input :can, required: true, label: '這件事有可能辦到嗎？', placeholder: '有可能，只要我一星期跑三次的話', input_html: {value: @dream.can} %>
    <%= f.input :how, required: true, label: '這件事能配合現實生活嗎？', placeholder: '如果每星期一三五都早點起床，就可能辦到', input_html: {value: @dream.how} %>
    <%= f.input :when, required: true, label: '時間進度怎麼定？', placeholder: '本週跑五公里，下週跑六公里，下下週跑七公里', input_html: {value: @dream.when} %>
    <% if browser.device.mobile? %>
      <%= f.input :finaldate, required: true, label: '預定完成日期', as: :date, html5: true, input_html: {min: Date.today+1.day} %>
    <% else %>
      <%= f.input :finaldate, required: true, label: '預定完成日期', as: :date, html5: true, input_html: {min: Date.today+1.day} %>
      <%#= f.input :finaldate, required: true, label: '預定完成日期', as: :datepicker %>
    <% end %>
    <p><%= f.collection_radio_buttons :owner_name, [[true, '署名發表'] ,[false, '匿名發表']], :first, :last %></p>
    <%= f.submit 'Save', class: "btn btn-primary" %>
  <% end %>
</div>
<br>
